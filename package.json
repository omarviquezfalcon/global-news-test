{
  "name": "global-news-cypress-tests",
  "version": "1.0.0",
  "description": "Automated tests for Global News Project",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "cypress run",
    "test:ci": "cypress run --env allure=true",
    "start:ci": "echo 'Using external URL for CI'",
    "setup": "node setup.js",
    "install:all": "npm install && node setup.js",
    "reports:generate": "npm run test:ci && allure generate allure-results --clean -o cypress-allure-report",
    "reports:open": "allure open cypress-allure-report",
    "server": "python -m http.server 8081",
    "dashboard": "npm run server"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-cypress": "^3.4.1",
    "cypress": "^13.6.0"
  },
  "keywords": [
    "cypress",
    "testing",
    "automation",
    "news"
  ],
  "author": "Test Automation",
  "license": "MIT"
}
